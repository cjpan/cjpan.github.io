body
  >header
    width 100%
    height 375px 
    max-width 100%
    max-height 100%
    box-shadow 2px 4px 5px hsla(0,1%,1%,.2)
    if(banner_img)
      background url("../"+banner-img) center color-theme
    else
      background color-theme
    background-repeat no-repeat
    @media tabletmax
      height 300px
      if(banner_tablet)
        background url("../"+banner-img-tablet) center color-theme
      background-repeat no-repeat
    @media minimax 
      height 210px
      if(banner_mini)
        background url("../"+banner-img-mini) center color-theme
      background-repeat no-repeat
    @media phonemax 
      height 120px
      if(banner_phone)
        background url("../"+banner-img-phone) center color-theme
      background-repeat no-repeat
    color color-white
    >div
      width 95%
      margin 0 auto
      position relative
      overflow hidden
    a
      display block
      color color-black

#imglogo
  float left
  width 4em
  height 4em
  @media mini
    width @width+1
  @media tablet
    width @width+1.5
  img
    width 4em
    @media mini
      width @width+1
    @media tablet
      width @width+1.5

#textlogo
  display none
  float left
  width 75%
  margin-left 0.5em
  h1.site-name
    width 86%
    if ShowCustomFont
      font-family font-custom-family
      font-size font-size+100
      line-height line-height
      font-smoothing()
      @media mini
        font-size font-size+140
      @media tablet
        font-size font-size+180
    else
      font-family font-default
      font-size font-size+60
      line-height line-height+0.4
      font-weight normal
      @media mini
        font-size font-size+90
      @media tablet
        font-size font-size+120
  h2.blog-motto
    font-size 0.7em
    font-weight normal
    @media mini
      font-size font-size
    @media tablet
      font-size font-size+10

.navbar
  position fixed 
  display block
  width 3em
  right 3em
  top 1em
  padding 0.5em
  display none

.navbutton::before
  font-family font-icon-family
  font-smoothing()
  content "\f0c9"

.navmobile::before
  padding-left 1em

header nav
  float right
  width auto
  margin-top 1em
  max-height none
  padding-top 0em
  transition max-height 1s ease-out
  margin-right 1em
  @media phone 
    margin-right 1em
  @media tablet
    margin-right 9em
  ul
    @media phone 
      float right 
  ul li
    text-align right
    float left 
  ul li a
    padding 0.2em 0 0.2em 1em
    @media tablet
      padding 0.2em 0.5em
    &:hover
      background saturate(darken(color-theme, 25%), 10%)
      color color-font-nav

.shownav
  max-height 40em
  visibility visible

.search
  display none
  padding 0.1em 0 0 1em
  input
    -webkit-appearance textfield
    font-size 0.87em
    font-color color-black
    line-height line-height+0.2
    border 1px solid color-black
    color color-black
    background transparent
    width 80%
    padding-left 0.5em
    @media tablet
      width 8em
      transition .5s width
      &:focus
        width 15em
  label
    display none
